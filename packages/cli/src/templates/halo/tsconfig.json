{
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./src",
    "sourceMap": true,
    "removeComments": false,
    "module": "commonjs",
    "target": "es2017",
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "es7"
    ],
    "moduleResolution": "node",
  },
  "includes": [
    "./src/**/*",
  ]
}